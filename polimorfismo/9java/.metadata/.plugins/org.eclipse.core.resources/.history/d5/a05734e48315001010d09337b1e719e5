package ejer9;

public class BloqueTnt {
    private String tipo;
    private int daño;

    public BloqueTnt(String tipo, int daño) {
        this.tipo = tipo;
        this.daño = daño;
    }

    public void accion() {
        System.out.println("Preparando TNT tipo " + tipo + " con daño de " + daño + " puntos");
    }

    public void colocar(String orientacion) {
        System.out.println("Colocando TNT en la " + orientacion);
    }

    public void colocar() {
        colocar("suelo");
    }

    public void romper() {
        System.out.println("¡Boom! La TNT explotó al romperse.");
    }
}
